{
  "name": "core-os",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.coreos.dev",
    "productName": "Core OS",
    "files": [ "**/*" ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "legalTrademarks": "Core OS"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
